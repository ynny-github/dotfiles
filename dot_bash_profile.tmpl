# Switch to default shell in interactive mode
{{- if .defaultShell }}
if [[ $- == *i* ]] && [[ -z "$ANTIGRAVITY_AGENT" ]] && command -v {{ .defaultShell }} &> /dev/null; then
    exec {{ .defaultShell }}
fi
{{- end }}

# If exec didn't happen, source bashrc for bash usage
if [ -f ~/.bashrc ]; then
    source ~/.bashrc
fi
